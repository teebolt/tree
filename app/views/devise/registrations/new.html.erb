<div class="vertical-center-wrapper">
  <div class="container">
    <div class="row">
      <div class="col d-flex align-items-center">
        <main>
          <%= image_tag("tree-logo.png", width: "100px") %>
          <h3 class="text-secondary mt-4">The social network that doesn't track you.</h3>
        </main>
      </div>
      <div class="col-md-4 d-flex align-items-center">
        <section>
          <h2>Sign up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-label-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Email address" %>
              <%= f.label :email %><br />
            </div>

            <div class="form-label-group">
              <%= f.text_field :full_name, class: "form-control", placeholder: "Full name" %>
              <%= f.label :full_name %><br />
            </div>

            <div class="form-label-group">
              <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
              <%= f.label :username %><br />
            </div>

            <div class="form-label-group">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
              <%= f.label :password %>
            </div>

            <div class="mt-3">
              <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
            </div>
          <% end %>
          <div class="mt-2">
            <%= render "devise/shared/links" %>
          </div>
          </section>
      </div>
    </div>
  </div>
</div>
